<div class="container">
  <p style="color: green"><%= notice %></p>

  <%= render @patient %>
  <%= link_to "Edita este paciente", edit_patient_path(@patient) %> |
  <%= link_to "Regresar a pacientes", patients_path %>
  <%= button_to "Eliminar este paciente", @patient, method: :delete, class:"btn btn-secondary" %>

  <% if @medical_records.any? %>
    <blockquote class="blockquote text-center">
      <h3>Historias cl√≠nicas</h3>
    </blockquote>
    <% @medical_records.each do |medical_record| %>
      <%= render medical_record %>
    <% end %>
  <% end %>

  <%= link_to "Historia clinica", patient_medical_records_path(patient_id: @patient.id) %>
</div>
